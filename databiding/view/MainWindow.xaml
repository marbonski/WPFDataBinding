<Window x:Class="databiding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:databiding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="firstNameTextBox" Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,4">
  
            </TextBox>

            <TextBox x:Name="lastNameTextBox" Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,4">
                
            </TextBox>

            <TextBlock x:Name="fullNameTextBlock" Text="{Binding Path=FullName}" Background="LightBlue" Margin="0,4">
                
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
